  "main": "index.js",
  "scripts": {
    "start": "node src/core/index.js",
    "bot": "node src/core/index.js",
    "record": "node src/core/record-new-task.js",
    "schedule": "node src/core/scheduler.js",
    "setup-login": "node src/utils/run-setup-login.js",
    "verify-login": "node src/utils/verify-session.js",
    "build:frontend": "cd frontend && npm install && npm run build",
    "deploy:frontend": "npm run build:frontend && rm -rf src/server/public/* && mkdir -p src/server/public && cp -r frontend/dist/* src/server/public/",
    "ui:prod": "npm run deploy:frontend && node src/server/index.js",
    "ui": "node dev-runner.js"
